#include <iostream>
#include <string>
using namespace std;
int main(){
    string name;
    int age;
    string college;
    cout<<"Enter full name"<<endl;
    getline(cin,name);
    cout<<"Enter age:"<<endl;
    cin>>age;
    cin.ignore();
    cout<<"Enter college name(use space in between):"<<endl;
    getline(cin,college);
    cout<<"Hello "<<name<<", I see you are "<<age<<" years old and are currently studying at "<<college;

}
