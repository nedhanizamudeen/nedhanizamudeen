#include <iostream>
#include <cmath>
using namespace std;
int main(){
    float x,y;
    char z;
    cout<<"Enter operator: +,-,*,/,|(for absolute):";
    cin>>z;
    cout<<"Enter number 1:";
    cin>>x;
    cout<<"Enter number 2:";
    cin>>y;
    if(z=='+'){
        cout<<"Sum:"<<x+y;
    }
    else if(z=='-'){
        cout<<"Difference:"<<x-y;
    }
    else if(z=='*'){
        cout<<"Product:"<<x*y;
    }
    else if(z=='/'){
        cout<<"Quotient:"<<x/y;
    }
    else if(z=='|'){
        cout<<"Absolute value 1:"<<abs(x)<<endl;
        cout<<"Absolute value 2:"<<abs(y)<<endl;
    }
    else{
        cout<<"Invalid Input";
    }
    
}
